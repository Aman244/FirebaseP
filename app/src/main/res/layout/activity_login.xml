        android:text="Password :"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/usernameEd"
        android:layout_alignBottom="@id/nameofapp"
        android:layout_marginLeft="87dp"
        android:layout_marginBottom="-300dp"
        android:textColor="#FF3A32"
        android:text="I'm Admin" />

    <EditText
        android:id="@+id/usernameEd"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/nameofapp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="186dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="-188dp"
        android:background="#ffffff"
        android:hint="user id"
        android:paddingLeft="11dp"
        android:textSize="22dp" />

    <EditText
        android:layout_width="172dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/usernameEd"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="185dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="-83dp"
        android:background="#ffffff"
        android:hint="password"
        android:paddingLeft="11dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/usernameEd"
        android:layout_alignBottom="@id/nameofapp"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="-432dp"
        android:text="or"
        android:textSize="25dp" />

    <Button
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/nameofapp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="14dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="-546dp"
        android:background="@color/colorAccent"
        android:text="            Register           " />

    <Button
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/nameofapp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="14dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="-445dp"
        android:background="@color/colorPrimaryDark"
        android:text="  Login     " />

    <Button
        android:layout_width="178dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@id/nameofapp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="178dp"
        android:layout_marginLeft="14dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="-354dp"
        android:text="  Forget Password  "

        />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/nameofapp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="242dp"
        android:layout_marginBottom="-349dp"
        android:text="Remember Me" />

</RelativeLayout>